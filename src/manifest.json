{
  "manifest_version": 3,

  "name": "__MSG_manifest_name__",
  "version": "0.5",
  "description": "__MSG_manifest_description__",
  "icons": { "192": "icon.png" },
  "default_locale": "en",

  "action": {
    "default_icon": "icon.png",
    "default_title": "__MSG_manifest_title__"
  },

  "permissions": [
    "declarativeNetRequest", "tabs", "storage", "sidePanel", "activeTab", "clipboardRead", "clipboardWrite", "scripting"
  ],

  "side_panel": {
    "default_path": "sidepanel.html",
    "openPanelOnActionClick": true
  },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "all_frames": true,
      "js": ["content-0.js"]
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "all_frames": true,
      "js": ["content-1.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["content-inject.js"],
      "matches": ["https://chatgpt.com/*"]
    }
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "Open my extension"
    }
  },

  "host_permissions": [
    "*://*.chatgpt.com/*"
  ],

  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "manifest-rule-1",
      "enabled": true,
      "path": "manifest-rule-1.json"
    }]
  },

  "background": {
    "service_worker": "sw.js"
  }
}
