{
  "manifest_version": 3,

  "name": "__MSG_manifest_name__",
  "version": "0.2",
  "description": "__MSG_manifest_description__",
  "icons": { "192": "icon.png" },
  "default_locale": "en",

  "action": {
    "default_icon": "icon.png",
    "default_title": "__MSG_manifest_title__"
  },

  "permissions": [
    "declarativeNetRequest", "storage", "sidePanel", "activeTab", "clipboardRead", "clipboardWrite"
  ],

  "side_panel": {
    "default_path": "sidepanel.html",
    "openPanelOnActionClick": true
  },

  "host_permissions": [
    "*://*.chatgpt.com/*"
  ],

  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "manifest-rule-1",
      "enabled": true,
      "path": "manifest-rule-1.json"
    }]
  },

  "background": {
    "service_worker": "sw.js"
  }
}
